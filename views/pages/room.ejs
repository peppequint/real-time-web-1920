<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('./../partials/head') %>
  </head>
  <body>
    <%- include ('./../partials/header') %>
    <main class="container container__room">
      <aside class="search">
        <a href="/dashboard"><h2 class="search__heading">◀️ Leave room!</h2></a>
        <form class="search__form" method="get" action="/search">
          <input class="search__input" id="search__input-song" type="text" name="search" placeholder="Search for a track.." autocomplete="off" />
        </form>
        <article class="search__results"></article>
      </aside>
      <section class="voting">
        <h2 class="voting__subtitle">
          Up or down vote suggested
          <span class="voting__category"><%- room %></span>
          tracks!
        </h2>
        <ul class="voting__list"></ul>
        <footer class="voting__message-box">
          <form id="voting__form" action="">
            <input type="text" autocomplete="off" class="voting__message" placeholder="Send a message...">
            <button class="voting__send">📡</button>
          </form>
        </footer>
      </section>
      <section class="ranking">
        <h2 class="ranking__heading">Current ranking <span class="ranking__score">💯 Score</span></h2>
        <ul class="ranking__list"></ul>
      </section>
    </main>
    <%- include('./../partials/scripts') %>
  </body>
</html>
